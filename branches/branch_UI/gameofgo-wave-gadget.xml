<?xml version="1.0" encoding="UTF-8" ?>
<Module>
  <ModulePrefs title="Game of Go Gadget" scrolling="true">
    <Require feature="setprefs" />
<!--
    <Require feature="views" />
-->
    <Require feature="wave" />
    <Require feature="dynamic-height" />
    <Require feature="minimessage"/>
  </ModulePrefs>
  <UserPref name="themeUrl"
            display_name="Theme Url"
            default_value="http://bartmate.homeip.net/googlewave/GameOfGo/themes/wooden-theme/"/>
<!--
  <Content type="html" view="canvas,home">
-->
  <Content type="html">
    <![CDATA[
      <script type="text/javascript" src="http://bartmate.homeip.net/googlewave/GameOfGo/utils.js"></script>
      <script type="text/javascript" src="http://bartmate.homeip.net/googlewave/GameOfGo/game.js"></script>
      <script type="text/javascript" src="http://bartmate.homeip.net/googlewave/GameOfGo/board.js"></script>
      <script type="text/javascript" src="http://bartmate.homeip.net/googlewave/GameOfGo/log.js"></script>
      <script type="text/javascript" src="http://bartmate.homeip.net/googlewave/GameOfGo/thememanager.js"></script>
      <script type="text/javascript" src="http://bartmate.homeip.net/googlewave/GameOfGo/participant.js"></script>
      <script type="text/javascript" src="http://bartmate.homeip.net/googlewave/GameOfGo/logview.js"></script>
      <script type="text/javascript" src="http://bartmate.homeip.net/googlewave/GameOfGo/sgf.js"></script>
<!-- Temporary script to show/hid screens -->
  <script language="JavaScript" type="text/javascript">
         function show_screen ( screenid )
         {
         var screens=document.getElementsByName("GadgetScreen");
         for (var i=0; i<screens.length; i++)
         {
         screens[i].style.visibility="hidden";
         }
         document.getElementById( screenid ).style.visibility="visible";
         }
  </script>
   <style type="text/css">
  @import url("gogadget.css"); 
  </style>
  
  <div id="container">

    <!-- Temporary screen selector -->
    <div style="position:absolute;top:-50;left:300;">
      Temp screen selector <a href="javascript:show_screen('scrGameMode')">screen1</a>
      <a href="javascript:show_screen('scrNormalGame')">screen2</a>
    </div>
    
    <!-- The main_div holds the complete gadget -->
    <div id="main_div" style="position:relative; overflow:hidden; height:425px;">
      <!-- Inside the main_div, each screen of the gadget is separated in its own div. The divs for the screens must have the name "GadgetScreen" -->
      <!-- Screen to select the game mode -->

      <div id="scrGameMode" name="GadgetScreen">
        <p>Choose game mode</p>

        <table id="gamemode_table">
          <tbody>
            <tr>
              <td style="padding:1em;"><img alt="Play against an opponent" src="mode_normal.jpg" /></td>

              <td style="padding:1em;"><a href="javascript:show_screen('scrNormalGame')"
              class="mainchoice">Play against opponent</a>19*19, <span name=
              "player_black">Mate</span> plays black. <a href="ui_model_03.html">Game
              info</a></td>

              <td style="padding:1em;"><a href="ui_model_04.html">Select other
              players</a> or<br />
              <a href="ui_model_05.html">Customize board</a></td>
            </tr>

            <tr>
              <td style="padding:1em;"><img alt="Upload and solve a problem" src="mode_problem.jpg" /></td>

              <td style="padding:1em;"><a href="ui_model_06.html" class=
              "mainchoice">Solve problem</a>You can load a go problem from an SGF file
              and solve it.</td>

              <td style="padding:1em;"><a href="ui_model_05.html">Customize
              board</a></td>
            </tr>

            <tr>
              <td style="padding:1em;"><img alt="Place stones and analyze games" src="mode_freeboard.jpg" /></td>

              <td style="padding:1em;"><a href="ui_model_07.html" class="mainchoice">Free
              board setup</a>You can freely place stones or analyze a game in this
              mode.</td>

              <td style="padding:1em;"><a href="ui_model_05.html">Customize
              board</a></td>
            </tr>
          </tbody>
        </table>
      </div><!-- Screen play against opponent -->

      <div id="scrNormalGame" name="GadgetScreen">
        <div id="board_div" style="float:left" title=
        "This is the container of the goban"><img alt="Goban" src="board19.png" /></div>

        <div id="toolbar_div" style="position:absolute; left:450px; height:444px;">
          <div id="toolbox_game_div" class="toolbox">
            <div class="toolbox_hdr">
              Game
            </div>

            <div class="toolbox_body">
              <table style="width:100%;">
                <tbody>
                  <tr>
                    <td><img alt="Black player" style="position:relative; left:20px;"
                    src="black_mc.png" /> <img alt="Black player" style=
                    "position:relative; top:10px;" src="black_mc.png" /></td>

                    <td><img alt="Black player" id="avatar_black" src=
                    "avatar_blk.jpg" /></td>

                    <td><img alt="White player" style="position:relative; left:20px;"
                    src="white_mc.png" /> <img alt="White player" style=
                    "position:relative; top:10px;" src="white_mc.png" /></td>

                    <td><img alt="White player" id="avatar_white" src=
                    "avatar_wht.jpg" /></td>
                  </tr>

                  <tr>
                    <td style="text-align:right">-&gt;</td>

                    <td id="player_black">Mate</td>

                    <td></td>

                    <td id="player_white">Zoltan</td>
                  </tr>

                  <tr>
                    <td>Time</td>

                    <td id="time_black">08:12</td>

                    <td></td>

                    <td id="time_black">07:51</td>
                  </tr>

                  <tr>
                    <td>Prisoner</td>

                    <td id="prisoner_black">0</td>

                    <td></td>

                    <td id="prisoner_black">3</td>
                  </tr>
                </tbody>
              </table>

              <div id="messagebox">
                Move not allowed: ko
              </div>

              <form style="padding:0.5em; margin:0">
                <button>Pass</button><button style="float:right;">Undo</button>
              </form>
            </div>
          </div>

          <div id="toolbox_comment_div" class="toolbox">
            <div class="toolbox_hdr">
              Comments
            </div>

            <div class="toolbox_body">
              <div style="overflow: auto;height: 110px;">
                <table style="width:200px;" cellspacing="0">
                  <col style="width:30px;" />
                  <col style="width:20px;" />
                  <col />

                  <tbody>
                    <tr>
                      <td><a href="javascript:moveto(22)">22</a></td>

                      <td><img alt="White's move no. 22" src="white_mc.png" style="width:20px;height:20px;" /></td>

                      <td>Atari</td>
                    </tr>

                    <tr>
                      <td><a href="javascript:moveto(22)">23</a></td>

                      <td><img alt="Black's move no. 23" src="black_mc.png" style="width:20px;height:20px;" /></td>

                      <td>Mate: this was killer<br />
                      Zoltan: you still have good chance</td>
                    </tr>

                    <tr>
                      <td><a href="javascript:moveto(22)">24</a></td>

                      <td><img alt="White's move no. 24 " src="white_mc.png" style="width:20px;height:20px;" /></td>

                      <td></td>
                    </tr>

                    <tr>
                      <td><a href="javascript:moveto(22)">25</a></td>

                      <td><img alt="Black's move no. 25" src="black_mc.png" style="width:20px;height:20px;" /></td>

                      <td></td>
                    </tr>

                    <tr>
                      <td><a href="javascript:moveto(22)">26</a></td>

                      <td><img alt="White's move no. 26" src="white_mc.png" style="width:20px;height:20px;" /></td>

                      <td>Zoltan: left after right</td>
                    </tr>
                  </tbody>
                </table>
              </div>

              <form style="padding:0.5em; margin:0">
                <input style="width:100%;" />
              </form>
            </div>
          </div>
        </div>

        <div style="clear:both;"></div>
      </div><!-- Screen to select players -->

      <div id="scrPlayers" name="GadgetScreen"></div><!-- Screen to set up board -->

      <div id="scrBoardSetup" name="GadgetScreen"></div>
    </div>
  </div>
  
  <script language="JavaScript" type="text/javascript">
  show_screen ( "scrGameMode" );
  </script>
     ]]>
  </Content>
</Module>
